<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- including axios file in frontend -->
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <title>Signup page</title>
        <style>

        html{
            height: 100%;
            width: 100%;
        }
        #form-body{
            background-color: rgb(235, 234, 234) ;
            width: 15cm ;
            margin: auto ;
            padding: 25px;
            box-sizing: border-box ;
            border-radius: 5px ;
            position: relative;
            bottom: 30px;
            box-shadow: rgba(0, 0, 0, 0.25) 0px 54px 55px, rgba(0, 0, 0, 0.12) 0px -12px 30px, rgba(0, 0, 0, 0.12) 0px 4px 6px, rgba(0, 0, 0, 0.17) 0px 12px 13px, rgba(0, 0, 0, 0.09) 0px -3px 5px;
        }
        input{
            padding: 10px;
            font-size: 15px;
            box-sizing: border-box;
            border-radius: 4px ;
            border: 1px solid #ccc ;
            height: 1cm ;
            width: 100% ;
            margin-top: 6px ;
        }

        label{
            font-size: 18px ;
        }

        label,input{
            font-family: sans-serif;
        }
        button{
            font-size: 15px ;
            margin-top: 3rem ;
            cursor:pointer ;
            background-color: #04AA6D ;
            color: white ;
            border: none ;
            padding: 12px 10rem ;
            border-radius: 4px ;

        }
        button:hover{
            background-color: #45a049;
        }

        input:focus{
            outline:2px solid black;
        }

        .form{
            display: flex;
            justify-content: center;
            align-items: baseline;
            font-family:'Times New Roman', Times, serif ;
            color: white;
            font-size: 30px;
            letter-spacing: 5px;
            margin-top: 5rem;
            gap: 14px;
            
        }

        body{
        background-image: url(https://i.pinimg.com/736x/27/d4/ec/27d4ec1f4267ccc814a765d5e7427899.jpg);            
        background-repeat: no-repeat;
        background-size: 50%;
        background-attachment: fixed;
        background-color: #F4F4F6;
        }

        .btn-container{
            margin-right: auto;
            margin-left: auto;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        a{
            text-decoration: none;
        }

        p{
            margin-top: 3rem;
        }

        a:hover{
            color: red;
            text-decoration: underline;
        }
        .container{
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

    </style>
</head>

<body>
<div class="container">


    <form>
    <div id="form-body">
        <h1> SIGNUP </h1>

        <label for="companyName" >Enter Student Name :</label>
        <br>
        <input type="text" name="companyName" id="companyName" placeholder="STUDENT NAME">
        
        <br>
        <br>
        
        <label for="code" > Enter Student Code : </label>
        <br>
        <input type="text" id="code" name="code" placeholder="Student Code...">

        <br>
        <br>

        <label for="email" > Enter Student Email : </label>
        <br>
        <input type="text" id="email" name="email" placeholder="abc@gmail.com">

        <br>
        <br>

        <div class="btn-container">
            <button type="submit" class="submit-btn"> SIGNUP </button>

            <p>Already a existing User ?  <a href="/"> let's login Now  </a>  </p>

        </div>

    </div>
    </form>

</div>

    <script>

        let company = document.querySelector("#companyName");
        let code = document.querySelector("#code");
        let emailInput = document.querySelector("#email");
    

        let btn = document.querySelector(".submit-btn");

        btn.addEventListener('click', async (event) => {
            event.preventDefault();

            // login request through axios
            try {

                let companyCode = code.value ;
                let companyName = company.value ;
                let email = emailInput.value;


                if (companyCode === '' || companyCode === '' || email === '') {
                    alert("Please Enter Details Carefully Code !!");
                    return;
                };


                try {
                    let response = await axios.post(`http://localhost:3000/signup`,{
                        companyName: companyName,
                        companyCode: companyCode,
                        email:email,
                    });

                    console.log(response.data);
                    const data = response.data ;

                        alert(data.message) ;
                    
                }
                catch (err) {
                    console.log(err.response.data) ;
                    alert(err.response.data.message);
                    return;
                }
            }
            catch (err) {
                console.log("Error in finding this company");
            }

        })
    </script>

</body>

</html>